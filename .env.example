# ========================================
# API Configuration
# ========================================
# Base URL for the backend API
VITE_API_URL=http://127.0.0.1:8000

# API Key for authentication
VITE_API_KEY=your_api_key_here

# Email notification endpoint path
VITE_SEND_EMAIL_PATH=/notifications/send-email

# ========================================
# Feature Flags
# ========================================
# Use mock services instead of real API calls (true/false)
VITE_USE_MOCK_SERVICES=false

# Enable Google Analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=false

# Enable debug mode for verbose logging (true/false)
VITE_ENABLE_DEBUG_MODE=false

# ========================================
# Analytics Configuration
# ========================================
# Google Analytics Measurement ID (e.g., G-XXXXXXXXXX)
# VITE_GOOGLE_ANALYTICS_ID=

# ========================================
# App Metadata
# ========================================
# Application version
VITE_APP_VERSION=1.0.0

# Application name
VITE_APP_NAME=Portfolio
